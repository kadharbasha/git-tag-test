def list
pipeline {
    options {
        buildDiscarder(logRotator(numToKeepStr: '6'))
    }
    agent none
    stages {
        stage('Create List') {
            agent any
            steps {
                script {
                    // you may create your list here, lets say reading from a file after checkout
                    list = ["dir1", "dir2", "dir3"]
                }
            }
            post {
                cleanup {
                    cleanWs()
                }
            }
        }
        stage('Dynamic Stages') {
            agent any
            steps {
                script {
                    for(int i=0; i < list.size(); i++) {
                        stage(list[i] + "build"){
                            echo "Element: $i"
                        }
                        stage(list[i] + 'docker build'){
                            echo "Element: $i"
                        }
                    }
                }
            }
            post {
                cleanup {
                    cleanWs()
                }
            }
        }
    }
}
