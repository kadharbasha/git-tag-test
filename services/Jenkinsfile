def jobs = ["dir1", "dir2", "dir3"]

def parallelStagesMap = jobs.collectEntries {
    ["${it}" : generateStage(it)]
}

def generateStage(job) {
    return {
        stage("${job} build") {
            when {
                expression {
                    matches = sh(returnStatus: true, script: "git diff --name-only HEAD~1..HEAD | sort -u | awk -F/ {'print \$2'} | uniq | grep -x ${job} || git diff-tree --no-commit-id --name-only -r HEAD | sort -u | awk -F/ {'print \$2'} | uniq | grep -x ${job}")
                    return !matches
                }
            }
            steps {
                script {
                    dir ("services/${job}") {
                    sh " ls"
                    }
                }
            }
        }
        stage('${job} docker build') {
            when {
                expression {
                     matches = sh(returnStatus: true, script: "git diff --name-only HEAD~1..HEAD | sort -u | awk -F/ {'print \$2'} | uniq | grep -x ${job} || git diff-tree --no-commit-id --name-only -r HEAD | sort -u | awk -F/ {'print \$2'} | uniq | grep -x ${job}")
                    return !matches
                }
                // branch 'dev'
            }
            steps {
                dir ("services/${job}") {
                sh "docker build -f build/dockerfile ."
                }
            }
        }
    }
}

pipeline {
    agent any
    stages {
        stage('parallel stage') {
            steps {
                script {
                    parallel parallelStagesMap
                }
            }
        }
    }
}
