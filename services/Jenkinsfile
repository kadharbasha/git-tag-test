pipeline {
  agent any
  stages {
    stage('Clone sources') {
      steps {
        script {
          def filelist = getChangedFilesList() // List of filenames that have changed
          def parallelStagesMap = filelist.collectEntries {
          def directoryName = "${it}".split("/")
          def serName = "${directoryName[1]}"
            echo "${serName}"
            ["${serName}" : generateStage1(serName)]
            ["${serName}" : generateStage2(serName)]
            ["${serName}" : generateStage3(serName)]
          }
          parallel parallelStagesMap
        }
      }
    }
  }
}

def generateStage1(serv) {
  return {
    stage("${serv} build"){
        sh "echo build"
    }
  }
}

def generateStage2(serv) {
  return {
    stage("${serv} docker push1"){
        sh "echo docker"
    }
  }
}

def generateStage3(serv) {
  return {
    stage("${serv} docker push2"){
        sh "echo docker2"
    }
  }
}

@NonCPS
def getChangedFilesList() {
  changedFiles = []
    for (changeLogSet in currentBuild.changeSets) {
      for (entry in changeLogSet.getItems()) { // for each commit in the detected changes
        for (file in entry.getAffectedFiles()) {
          changedFiles.add(file.getPath()) // add changed file to list
        }
      }
    }
  return changedFiles
}
