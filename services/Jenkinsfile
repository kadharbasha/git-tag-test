#!/usr/bin/env groovy

def list = ["dir1", "dir2", "dir3", "dir4", "dir5"]
def map = [
    dir1: "1.0.0", 
    dir2: "2.0.1", 
    dir3: "3.2.1",
    dir4: "1.2.3",
    dir5: "4.5.6"
]
def tagname
def tagnumber

def parallelStagesMap = list.collectEntries {
    ["${it}" : generateStage(it)]
}

def generateStage(diry) {
    return {
            matches = sh (
                script: "git diff --name-only HEAD~1..HEAD | sort -u | awk -F/ {'print \$2'} | uniq | grep -x ${diry} || git diff-tree --no-commit-id --name-only -r HEAD | sort -u | awk -F/ {'print \$2'} | uniq | grep -x ${diry}", returnStatus: true
            ) == 0
            if("$matches"!="true"){
                stage("${diry} build"){
                    dir ("services/${diry}") {
                        sh "ls -la"
                        echo "${BRANCH_NAME}"
                    }
                }
            }
    }
}

pipeline {
    agent any

    stages {
        stage('parallel stage') {
            steps {
                script {
                    parallel parallelStagesMap
                }
            }
        }
    }
}
