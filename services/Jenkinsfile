def list
pipeline {
    options {
        buildDiscarder(logRotator(numToKeepStr: '6'))
    }
    agent none
    stages {
        stage('Dynamic Stages') {
            agent any
            steps {
                script {
                    list = ["dir1", "dir2", "dir3"]
                    for(int i=0; i < list.size(); i++) {
                        stage(list[i] + ' build'){
                            echo "Element: $i"
                        }
                        stage(list[i] + ' docker build'){
                            echo "Element: $i"
                        }
                    }
                }
            }
        }
    }
}
