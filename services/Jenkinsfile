#!/usr/bin/env groovy

def list
pipeline {
    options {
        buildDiscarder(logRotator(numToKeepStr: '6'))
    }
    agent none
    stages {
        stage('Dynamic Stages') {
            agent any
            steps {
                script {
                    list = ["dir1", "dir2", "dir3"]
                    for(int i=0; i < list.size(); i++) {
                        stage(list[i] + ' build'){
                            steps {
                                script {
                                dir ("services/"+list[i]) {
                                sh " ls"
                                }
                                }
                                script {
                                dir ("services/"+list[i]) {
                                sh " ls"
                                }
                                }
                            }
                        }
                        stage(list[i] + ' docker build'){
                            steps {
                                dir ("services/"+list[i]) {
                                sh "docker build -f build/dockerfile ."
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
