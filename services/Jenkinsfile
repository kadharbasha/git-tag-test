#!/usr/bin/env groovy

def generateStage(serv) {
    return {
        stage("${serv}"){
            def jname ="${serv}"
            def nam = jname.split(" ")
            if("${name[1]}"=="build"){
                echo"this is build"
            }
            else if("${name[1]}"=="docker"){
                echo "this is docker"
            }
        }
    }
}

def list
def tagname
def tagnumber

pipeline {
    agent any
    stages {
        stage('parallel stage') {
            steps {
                script {
                    def job = ["dir1 build", "dir1 docker push", "dir2 build", "dir2 docker push"]
                    def parallelStagesMap = job.collectEntries {
                        ["${it}" : generateStage(it)]
                    }
                    parallel parallelStagesMap
                }
            }
        }
    }
}
